<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_32"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loading_network_error" />

    <TextView
        android:id="@+id/tv_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/LoadingController_error_message"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/btn_retry"
        android:background="@drawable/shape_white_16_stroke"
        android:textColor="@android:color/tertiary_text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_32"
        android:paddingLeft="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/sp_14"
        android:text="@string/LoadingController_error_retry" />

</LinearLayout>